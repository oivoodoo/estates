<div id="sign-in" class="signin external">
  <div class="modal-header">
    <div>
      <div class="logo"><%= image_tag("g/flockinvest-logo.svg") %></div>
      <div class="close" onclick="$.fancybox.close()"></div>
    </div>
  </div>

  <div class="modal-content">
    <div>
      <div class="logo"><div><%= image_tag("g/flockinvest-logo.svg") %></div></div>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :remote => true) do |f| %>
        <div class="tight">
          <div class="input-group">
            <%= f.email_field :email, placeholder: "E-mail", autocomplete: 'off', size: 1, required: true, style: 'width: 100%' %>
          </div>
        </div>
        <div class="action">
          <div>
            <div>
              <%= f.submit "Send me reset password instructions", class: "delta thicker" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type='text/javascript'>
  $('form').validate();
</script>

