<div id="sign-in" class="signin external">
  <div class="modal-content">
    <div>
      <h2>Change your password</h2>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <%= f.password_field :password, placeholder: "New Password", :style => 'width: 50%;', size: 1, required: true %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm new password", :style => 'width: 50%;', size: 1, required: true %>

        <div class="action">
          <div>
            <div>
              <%= f.submit "Change my password", class: "delta thicker" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>

