<div id="sign-in">
  <div class="modal-content">
    <div>
      
      <img class="logo" src="/g/flockinvest-logo.svg">
      
      <h1>Sign up</h1>
        <div class="social_sign">
          <h3> Sign up with your social account</h3>
          <% unless signed_in? %>
            <a href="user_omniauth_authorize_path(:facebook)" class="fb">
              <i class="icon-facebook"></i>
            </a>
            <a href="user_omniauth_authorize_path(:linkedin)" class="li">
              <i class="icon-linkedin"></i>
            </a>
            <a href="user_omniauth_authorize_path(:google_oauth2)" class="gp">
              <i class="icon-google-plus"></i>
            </a>
          <% else %>
            <%= current_user.name %>
            <%= current_user.email %>
          <% end %>
        </div>

      <form>
        <input type="text" placeholder="Full Name" size="1">        <input type="email" placeholder="E-mail" size="1">
        <input type="password" placeholder="••••••••" size="1">
        <div class="action">
          <div>
            <div>
              Already have an account? <a href="<%= new_user_session_path %>" class="sign-in">Sign in
            </a>.            </div>
            <div>
              <input type="submit" class="delta thicker" value="Sign up">
            </div>
          </div>
        </div>
      </form>
      
    </div>
  </div>
</div>