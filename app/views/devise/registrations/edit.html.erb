<section id="investor-edit" class="edit-profile">

  <div class="submenu">
    <div>
      <ul>
        <li><a class="dashboard" href="<%= dashboard_path %>">Dashboard</a></li>
        <li><a class="profile current" href="<%= edit_user_registration_path %>">Profile</a></li>
        <li><a class="settings" href="index-p=settings&i=kadri.html">Settings</a></li>
      </ul>
    </div>
  </div>

  <div class="message quiet">
    <a class="button iota thicker" href="index-p=investor&i=kadri.html">View your public profile</a>
  </div>


  <div class="head">
    <div>
      <figure class="profile-badge">
        <a href="http://flockcapital.com/profile-pic.php" class="profile-pic fancybox.ajax"><%= render partial: 'users/avatar', object: @user %><div class="focus"></div></a>
      </figure>
      <div id="investor-details">
        <h3><%= current_user.name %></h3>

        <div id="mini-bio">
          <p><%= @user.title %></p>
        </div>

        <div class="ext-account-buttons">
          <div>
            <div class="btns">
              <div>
                <button name="ext-account" value="facebook" class="ext-account-button facebook connected-ext-account-button" onclick="window.location=facebook.com"></button>
                <button name="ext-account" value="twitter" class="ext-account-button twitter connected-ext-account-button"></button>
                <button name="ext-account" value="google-plus" class="ext-account-button google-plus"></button>
                <button name="ext-account" value="linked-in" class="ext-account-button linked-in"></button>
              </div>
            </div> &nbsp;&nbsp;
            <div>
              <p class="tertiary">Connect external accounts to follow your friends' activity on Flock.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="body">
    <div class="main">

      <div id="tabs" class="tabs profile">
        <ul>
          <li><a class="personal current"><em>1</em> Personal Details</a></li>
          <li><a class="accreditation "><em>2</em> Accreditation</a></li>
          <li><a class="experience "><em>3</em> Experience</a></li>
        </ul>
      </div>

      <div class="tab-content gridwrap" id="profile">

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <label for="user_email">
            <%= f.email_field :email, placeholder: "E-mail", :size => 1 %>
          </label>

          <fieldset class="separated-bottom">
            <legend>To change your password, provide your old password and then type the new one:</legend>
            <div class="input-group">
              <label for="user_current_password" style="width:33.3%">
                <%= f.password_field :current_password, placeholder: "Old password", :size => 1 %>
              </label>
              <label for="user_password" style="width:33.3%">
                <%= f.password_field :password, placeholder: "New password", :size => 1 %>
              </label>
              <label for="user_password_confirmation" style="width:33.3%">
                <%= f.password_field :password_confirmation, placeholder: "New password confirmation", :size => 1 %>
              </label>
            </div>
          </fieldset>

          <fieldset class="input-group name">
            <label for="user_title" style="width:15%;">
              <%= f.text_field :title, placeholder: 'Title', size: 1 %>
            </label>
            <label for="user_first_name" style="width:28.33%">
              <%= f.text_field :first_name, placeholder: 'First Name', size: 1 %>
            </label>
            <label for="user_middle_name" style="width:28.33%">
              <%= f.text_field :middle_name, placeholder: 'Middle Name(s)', size: 1 %>
            </label>
            <label for="user_last_name" style="width:28.33%">
              <%= f.text_field :last_name, placeholder: 'Last Name', size: 1 %>
            </label>
          </fieldset>

          <label for="user_phone">
            <%= f.text_field :phone, placeholder: "Phone", size: 1 %>
          </label>

          <div class="tight">
            <label for="user_street">
              <%= f.text_field :street_address, placeholder: "Street address", size: 1 %>
            </label>
            <label for="user_zip">
              <%= f.text_field :zip_code, placeholder: "Zip code", size: 1 %>
            </label>

            <label for="user_city">
              <%= f.text_field :city, placeholder: "City/Town/Locality", size: 1 %>
            </label>

            <label for="user_country">
              <%= f.country_select(:country, ['USA', "Estonia", "United Kingdom"], {}, { class: "combobox" })%>
            </label>

            <label for="user_state">
              <%= f.state_select(:state, country = "US", options = {}, html_options = {class: "combobox"})%>
            </label>
          </div>

          <div class="action">
            <div>
              <div>
                <%= f.submit 'Update', :class => "zeta thickest" %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</section>

