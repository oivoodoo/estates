%link{:href => "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css", :rel => "stylesheet"}/
.container
  %section#register
    .hgroup
      %h1 Register or Sign in
    .row
      .signin.span6
        .social_sign
          %h3 Sign in with your social account
          %a.fb{:href => "#facebook"}
            %i.icon.icon-facebook
          %a.tw{:href => "#twitter"}
            %i.icon.icon-twitter
          %a.gp{:href => "#googleplus"}
            %i.icon.icon-google-plus
        .or
          .or_l
          %span or
          .or_r
        %p.sign_title Log in with your site account
        .form
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            = f.email_field :email, :placeholder => "Email", :style => "height: 30px; width: 260px;"
            %br
            = f.password_field :password, :placeholder => "Password", :style => "height: 30px; margin-right: 5px; width: 260px;"
            .forgot
              - if devise_mapping.rememberable?
                %label.checkbox
                  = f.check_box :remember_me
                  = f.label :remember_me
              = render :partial => "devise/shared/links"
              = f.submit "Sign in" 
      .signup.span6
        %fieldset
          .social_sign
            %h3 Don't have a site account yet?
            %a
              %i.icon.icon-user
          %p.sign_title Create one now, it's fast &amp; free!
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| 
            = f.email_field :email, :placeholder => "Email", :style => "height: 30px; width: 260px;"
            = f.password_field :password, :placeholder => "Password", :style => "height: 30px; margin-left: 1px; width: 260px;"
            = f.password_field :password_confirmation, :placeholder => "Password Confirmation", :style => "height: 30px; margin-left: 5px; width: 260px;" 
            %label.checkbox
              %input{:name => "checkboxes", :type => "checkbox", :value => "Option one"}
                I agree to the
                %a{:href => "#"} terms and conditions
            %br
            = f.submit "Create your account" 
