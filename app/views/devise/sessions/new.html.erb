<div id="sign-in" class="signin external">
  <div class="modal-header">
    <div>
      <%= render 'layouts/logo' %>
      <div class="close" onclick="$.fancybox.close()"></div>
    </div>
  </div>

  <div class="modal-content">
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
        <div class="tight">
          <div class="input-group">
            <%= f.email_field :email, placeholder: "E-mail", autocomplete: 'off', size: 1, style: 'width: 50%' %>
            <%= f.password_field :password, placeholder: "Password", autocomplete: 'off', size: 1, style: 'width: 50%' %>
          </div>
        </div>
        <div class="action">
          <div>
            <div>
              <a href="<%= new_user_password_path %>" class="sign-in fancybox.ajax">Forgot password?</a>
            </div>
            <div>
              <%= f.submit "Sign in", class: "delta thicker" %>
            </div>
          </div>
        </div>
        <br><br>
        <div class="ext-account-buttons">
          <button onclick="window.location='<%= user_omniauth_authorize_path(:facebook) %>'" name="ext-account" value="facebook" class="ext-account-button facebook"></button>
          <button onclick="window.location='<%= user_omniauth_authorize_path(:google_oauth2) %>'" name="ext-account" value="google-plus" class="ext-account-button google-plus"></button>
          <button onclick="window.location='<%= user_omniauth_authorize_path(:linkedin) %>'" name="ext-account" value="linked-in" class="ext-account-button linked-in"></button>
        </div>
        <p class="tertiary">You may alternatively sign in with one of your external accounts</p>
      <% end %>
    </div>
  </div>
</div>

<script type='text/javascript'>
  $('form').validate();
</script>

