<div id="sign-in" class="signin external">
  <div class="modal-header">
    <div>
      <div class="logo"><%= image_tag("g/flockinvest-logo.svg") %></div>
      <div class="close" onclick="$.fancybox.close()"></div>
    </div>
  </div>

  <div class="modal-content">
    <div>
      <div class="logo"><div><%= image_tag("g/flockinvest-logo.svg") %></div></div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
        <div class="tight">
          <div class="input-group">
            <%= f.email_field :email, placeholder: "E-mail", autocomplete: 'off', size: 1, style: 'width: 50%' %>
            <%= f.password_field :password, placeholder: "Password", autocomplete: 'off', size: 1, style: 'width: 50%' %>
          </div>
        </div>
        <div class="action">
          <div>
            <div>
              <a href="sign-in.php-action=forgotten.html" class="sign-in fancybox.ajax">Forgot password?</a>
            </div>
            <div>
              <%= f.submit "Sign in", class: "delta thicker" %>
            </div>
          </div>
        </div>
        <br><br>
        <div class="ext-account-buttons">
          <button formaction="<%= user_omniauth_authorize_path(:facebook) %>" name="ext-account" value="facebook" class="ext-account-button facebook"></button>
          <button formaction="<%= user_omniauth_authorize_path(:linkedin) %>" name="ext-account" value="twitter" class="ext-account-button twitter"></button>
          <button formaction="<%= user_omniauth_authorize_path(:google_oauth2) %>" name="ext-account" value="google-plus" class="ext-account-button google-plus"></button>
          <button formaction="<%= user_omniauth_authorize_path(:linkedin) %>" name="ext-account" value="linked-in" class="ext-account-button linked-in"></button>
        </div>
        <p class="tertiary">You may alternatively sign in with one of your external accounts</p>
      <% end %>
    </div>
  </div>
</div>

