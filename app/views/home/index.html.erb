<section id="intro">
  <div id="slideshow" class="grid-1-1 no-padding" >
    <div>
      <div class="bg"></div>
      <div class="fg">

        <h1 class="title">Invest in real estate online</h1>
        <% unless current_user.present? %>
          <div class="action">
            <button class="how-it-works elevated">How? &nbsp;&nbsp;<span>1:45 min</span></button>
            <a href="<%= new_user_registration_path %>" class="button sign-up sign-in elevated fancybox.ajax">Sign Up</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="home-listing" ng-controller='ProjectsListingController'>
  <div class="listing-head"><h5 class="listing-heading"><label>Featured Investments</label><span><a href="<%= projects_path %>">View all</a></span></h5></div>
  <div class="gridwrap">
    <%= render partial: 'projects/project', collection: @projects, locals: { class_name: "full", image_size: :home } %>
  </div>
</section>

