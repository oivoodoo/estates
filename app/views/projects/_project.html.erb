<article class="project-badge new" onclick="location.href=<%=url_for(project)%>">
  <div>
    <header>
      <div class="imagery holder">
        <%= link_to project do %>
          <%= image_tag project.image_url %>
          <div class="focus"></div>
        <% end %>
        <h4 class="project-name">
          <% link_to project.name do %>
            <label class="type">Residential</label>
          <% end %>
        </h4>
      </div>
    </header>

    <div class="meta table">
      <div>
        <img class="dev-logo" src="<%= project.company_image_url %>">
      </div>
      <div>
        <ul>
          <li>
            <b>
              <%= number_to_percentage(project.target_return, :precision => 0)%>
            </b> target return</li>
          <li><b><%= project.investment_type %></b> purchase</li>
          <li><b><%= project.holding %></b> holding period</li>
        </ul>
      </div>
    </div>

    <ul class="goal table">
      <li class="deadline"><b>22</b> Days to close</li>
      <li class="goalsum"><%= number_to_currency(project.price) %></li>
    </ul>
    <% if project.percent? %>
      <div class="goalmeter">
        <div class="progress" style="width:<%= number_to_percentage(project.percent, :precision => 0)%>">
        </div>
      </div>
    <% end %>
  </div>
</article>
