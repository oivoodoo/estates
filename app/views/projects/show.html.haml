%section#project
  .head
    %hgroup
      %h1
        = @project.name
        %label.type Residential
    .action
      %button.primary
        Invest
        %i
    .financials
      %h2= number_to_currency(@project.price)
      %br{:style => "clear:both;"}
        .goalmeter
          .progress{:style => "width:66%"}
            .marker{:style => "left:66%;"}
              %label 66%
        %div
          %ul
            %li.target-return Target return 12%
    .imagery
      = image_tag @project.image_url
    .side
      .placeholder= @project.owner
    .details
      #project-details-menu Tabs â€” Overview, Financials, Location, Property, Strengths &amp; Risks
      #project-details-content
        %p= @project.description
      %h2 Comments
      - @project.comments.each do |comment|
        %p
          %strong Commenter:
          = comment.commenter
        %p
          %strong Comment:
          = comment.body

      %h2 Add a comment:
      = form_for([@project, @project.comments.build]) do |f|
        %p
          = f.label :commenter
          %br
          = f.text_field :commenter
        %p
          = f.label :body
          %br
          = f.text_area :body
        %p
          = f.submit
