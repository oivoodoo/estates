						}
						&.twitter {
							background-color: @twitterBlue;
						}
						&.google-plus {
							background-color: @googlePlusOrange;
						}
						&.linked-in {
							background-color: @linkedInBlue;
						}
					}
				}
				&:before {
					margin: 0;
				}
				&:after {
					.text;
					font-size: unit(@iota, rem);
					line-height: 2.4rem;
					position: absolute;
					right: 0;
					top: 100%;
					padding: 0 .85rem;
					background: inherit !important;
					color: white;
					content: attr(title);
					height: 0;
					overflow: hidden;
					.transition(height .2s);
				}
				&:hover {
					z-index: 1;
					&:after {
						height: 2.2rem;
					}
				}
			}
		}
	}
	
