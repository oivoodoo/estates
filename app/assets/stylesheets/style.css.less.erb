			font-weight: 500;
			margin-bottom: 0;
			padding-left: .5rem;
			span {
				white-space: nowrap;
			}
		}
		
		.secondary-action {
			@buttonSize: 1.8rem;
			padding-left: @gridMargin/3*2;
			//overflow: hidden;
			text-align: right;
			white-space: nowrap;
			vertical-align: middle;
			.transition(all .2s);
			button,
			a.button {
				line-height: 1;
				white-space: nowrap;
				position: relative;
				+button, +a.button {
					margin-left: @padding/2;
				}
				&.track, &.tracking {
					.zeta;
					padding: 0;
					line-height: @buttonSize;
					width: @buttonSize;
					height: @buttonSize;
					color: white;
					background-color: @silver;
					&:hover {
						color: white;
						background-color: @highlight;
					}
