// alternatively have some form fields tight together
.tight {
	input[type=text],
	input[type=number],
	input[type=email],
	input[type=tel],
	input[type=time],
	input[type=week],
	input[type=month],
	input[type=datetime],
	input[type=datetime-local],
	input[type=search],
	input[type=url],
	input[type=password],
	textarea {
		margin: 0;
		position: relative;
		z-index: 0;
		
		&:focus {
			z-index: 1;
		}
	}
	.input-group {
		input {
			float: left;
			+input {
				margin-left: -1px;
				margin-top: 0;
			}
		}
		.clear-children;
	}
	
	label {
		display: block;
		margin-top: -1px;
	}
}
@media only screen and (max-width: 469px) { // Smartphones
	.tight {
		.input-group {
			input {
				width: 100% !important;
				float: none;
				+input {
					margin-left: 0;
					margin-top: -1px;
				}
			}
		}
	}
}



